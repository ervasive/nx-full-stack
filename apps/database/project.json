{
  "name": "database",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/database/src",
  "projectType": "application",
  "targets": {
    "cli": {
      "executor": "nx:run-commands",
      "options": {
        "command": "graphile-migrate",
        "cwd": "apps/database"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "configurations": {
        "development": {
          "commands": ["pnpm devenv start", "pnpm nx run database:cli watch"],
          "dev": true
        },
        "production": {
          "commands": ["pnpm nx run database:cli migrate"],
          "dev": false
        }
      },
      "defaultConfiguration": "development"
    },
    "setup": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm devenv up -d", "pnpm nx run database:setup-tasks"]
      }
    },
    "setup-tasks": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "apps/database/scripts/setup.mjs",
          "pnpm nx run database:cli reset --erase",
          "pnpm nx run database:cli reset --erase --shadow"
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
